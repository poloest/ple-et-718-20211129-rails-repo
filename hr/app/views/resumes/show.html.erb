<p id="notice"><%= notice %></p>

<p>
  <strong>Firstname:</strong>
  <%= @resume.firstname %>
</p>

<p>
  <strong>Lastname:</strong>
  <%= @resume.lastname %>
</p>

<p>
  <strong>Image url:</strong>
  <%= @resume.image_url %>
</p>

<img src="<%= @resume.image_url %>" style="width:20%" alt="Avatar">

<p>
  <strong>Role:</strong>
  <%= @resume.role %>
</p>

<p>
  <strong>Location:</strong>
  <%= @resume.location %>
</p>

<p>
  <strong>Email:</strong>
  <%= @resume.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @resume.phone %>
</p>

<%= form_for([@resume, @resume.skills.build]) do |f| %>
  <p>
    <%= f.label :skill_title %><br>
    <%= f.text_field :skill_title %>
  </p>
  <p>
    <%= f.label :skill_level %><br>
    <%= f.text_field :skill_level %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<p class="w3-large"><b><i class="fa fa-asterisk fa-fw w3-margin-right w3-text-teal"></i>Skills</b></p>

<% @resume.skills.each do |skill| %>
          
  <p>
    <%= skill.skill_title %>
  </p>
     <div class="w3-light-grey w3-round-xlarge w3-small">
            <div class="w3-container w3-center w3-round-xlarge w3-teal" style="width:<%= skill.skill_level %>"><%= skill.skill_level %></div>
          </div>
<% end %>

<%= link_to 'Edit', edit_resume_path(@resume) %> |
<%= link_to 'Back', resumes_path %>


